{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "zarm-web": ["components/index.tsx"],
      "zarm-web/es/*": ["components/*"]
    },
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["classnames", "react", "react-dom", "node", "jest"]
  },
  "include": ["components"],
  "exclude": ["node_modules", "lib", "es", "**/__tests__/**", "tests"],
  "compileOnSave": false
}
